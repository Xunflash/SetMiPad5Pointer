<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.setMiPad5Pointer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="cardBackgroundColor">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_android</item>
        <item name="colorSecondaryVariant">@color/blue_android</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>
    <style name="Widget.Shanxunhelper.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorSecondary">@color/blue_android_dark</item>
    </style>

</resources>